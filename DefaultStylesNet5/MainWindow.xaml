<Window x:Class="DefaultStylesNet5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DefaultStylesNet5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Selector.SelectionChanged ="MainWindow_OnSelectionChanged"
        >
    <DockPanel HorizontalAlignment="Stretch">
        <ListBox x:Name="m_List" DockPanel.Dock="Left" MinWidth="200" DisplayMemberPath="Name" SelectionMode="Single"></ListBox>
        <TextBox x:Name="m_Xaml" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" ></TextBox>
    </DockPanel>
</Window>
